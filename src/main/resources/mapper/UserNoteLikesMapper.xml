<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.unswit.usercenter.mapper.UserNoteLikesMapper">

    <resultMap id="UserNoteLikesMap" type="com.unswit.usercenter.model.domain.UserNoteLikes">
            <id property="userId" column="userId" />
            <id property="noteId" column="noteId" />
            <result property="likedAt" column="likedAt" />
    </resultMap>

    <!-- 2. 根据复合主键查询 -->
    <select id="selectById" resultMap="UserNoteLikesMap">
        SELECT userId, noteId, likedAt
        FROM user_note_likes
        WHERE userId = #{userId}
          AND noteId = #{noteId}
    </select>

    <!-- 3. 插入 -->
    <insert id="insert" parameterType="com.unswit.usercenter.model.domain.UserNoteLikes">
        INSERT INTO user_note_likes
            (userId, noteId, likedAt)
        VALUES
            (#{userId}, #{noteId}, #{likedAt})
    </insert>

    <!-- 4. 删除 -->
    <delete id="deleteById" parameterType="com.unswit.usercenter.model.domain.UserNoteLikes">
        DELETE FROM user_note_likes
        WHERE userId = #{userId}
          AND noteId = #{noteId}
    </delete>

    <sql id="Base_Column_List">
        userId,noteId,likedAt
    </sql>
</mapper>
